<div class="account-box">

  <h3 class="text-center">我点赞的作品</h3>
  <br>

  <table class="table table">
    <thead>
      <tr>
        <th>标题</th>
        <th>作者</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @exchange_collections.each do |exchange_collection| %>
        <tr>
          <td><%= link_to(exchange_collection.title, exchange_path(exchange_collection)) %></td>
          <td><%= exchange_collection.user.name %></td>
          <td><%= exchange_collection.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br><br><br>

<div class="account-box">

  <h3 class="text-center">我投的作品</h3>
  <br>

  <table class="table table">
    <thead>
      <tr>
        <th>标题</th>
        <th>作者</th>
        <th>发布时间</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @user_exchanges.each do |user_exchange| %>
        <tr>
          <td><%= link_to(user_exchange.title, exchange_path(user_exchange)) %></td>
          <td><%= user_exchange.user.name %></td>
          <td><%= user_exchange.created_at %></td>
          <% if user_exchange.is_hidden? %>
            <td>审核中</td>
          <% else %>
            <td>已发布</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
