<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10">
      <h3 class="text-center">了解促进会列表</h3>
    </div>
    <br>

    <div class="col-md-10">
      <div>
        <%= link_to("增加文章", new_admin_introduction_path, class: "btn btn-sm btn-default pull-right") %>
      </div>
      <table class="table table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <td>标题</td>
            <td>发布时间</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @introductions.each do |introduction| %>
            <tr>
              <td><%= link_to(introduction.title, introduction_path(introduction))  %></td>

              <td><%= introduction.created_at %></td>
              <td>
                <%= link_to("编辑", edit_admin_introduction_path(introduction)) %> |
                <%= link_to("删除", admin_introduction_path(introduction), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= link_to("回到前台", root_path, class: "btn btn-sm btn-default pull-left") %>
      </div>
    </div>
  </div>
</div>
