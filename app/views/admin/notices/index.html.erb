<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10">
      <h3 class="text-center">广告列表</h3>
    </div>
    <br>
    <div class="col-md-10">
      <div>
        <%= link_to("增加广告", new_admin_notice_path, class: "btn btn-sm btn-default pull-right") %>
      </div>

      <table class="table table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <td>标题</td>
            <td>发布时间</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @notices.each do |notice| %>
            <tr>
              <td><%= link_to(notice.title, notice_path(notice))  %></td>

              <td><%= notice.created_at %></td>
              <td>
                <%= link_to("编辑", edit_admin_notice_path(notice)) %> |
                <%= link_to("删除", admin_notice_path(notice), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= link_to("回到前台", root_path, class: "btn btn-sm btn-default pull-left") %>
      </div>
    </div>
  </div>
</div>
