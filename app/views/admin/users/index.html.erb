<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10">
      <h3 class="text-center">注册用户列表</h3>
    </div>
    <br>
    <div class="col-md-10">


      <table class="table table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <td>用户名</td>
            <td>邮箱</td>
            <td>注册时间</td>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at %></td>

            </tr>
          <% end %>

        </tbody>

      </table>
      <div class="text-center" >
        <%= paginate @users %>
      </div>
      <div>
        <%= link_to("回到前台", root_path, class: "btn btn-sm btn-default pull-left") %>
      </div>
    </div>
  </div>
</div>
