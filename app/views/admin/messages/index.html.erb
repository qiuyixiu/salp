<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10">
      <h3 class="text-center">促进会动态列表</h3>
    </div>
    <br>
    <div class="col-md-10">
      <div>
        <%= link_to("增加动态信息", new_admin_message_path, class: "btn btn-sm btn-default pull-right") %>
      </div>

      <table class="table table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <td>标题</td>
            <td>发布时间</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td>
                <%= render_message_status(message) %>
                <%= link_to(message.title, message_path(message))  %>
              </td>

              <td><%= message.created_at %></td>
              <td>
                <%= link_to("编辑", edit_admin_message_path(message)) %> |
                <%= link_to("删除", admin_message_path(message), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
                <% if message.is_hidden %>
                  <%= link_to("发布", publish_admin_message_path(message), :method => :post, :class => "btn btn-xs btn-success") %>
                <% else %>
                  <%= link_to("隐藏", hide_admin_message_path(message), :method => :post, :class => "btn btn-xs btn-warning") %>
                <% end %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= link_to("回到前台", root_path, class: "btn btn-sm btn-default pull-left") %>
      </div>
    </div>
  </div>
</div>
